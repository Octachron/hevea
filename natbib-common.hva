\newcommand{\NAT@format@cite}[1]
{\@callsubst\NAT@args#1\@NAT@format@cite{\NAT@num}{\NAT@auth}{\NAT@year}}
\newcommand{\NAT@args}[4]
{\def\NAT@num{#1}\def\NAT@auth{#2}\def\NAT@year{#3}\def\NAT@long{#4}}
\def\NAT@bibitem#1(#2)#3(@)#4(@){%
