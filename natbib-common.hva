  {\stepcounter{heveabib}\ifthenelse{\equal{#1}{!*!}}
    {\@callsubst{\NAT@bibitem}{()(@)#2(@)}}
    {\@callsubst{\NAT@bibitem}{#1(@)#2(@)}}}
