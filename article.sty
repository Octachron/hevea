\newcommand{\part}[2][]{%
\stepcounter{part}%
\ifoptarg\cut{toc}{part}{#1}%
\else\cut{toc}{part}{#2}\fi
\@open{H1}{ALIGN=center}%
\partname:~\thepart\\%
#2%
\@close{H1}%
}
\newcommand{\part*}[1]{%
\@open{H1}{ALIGN=center}%
#1%
\@close{H1}%
}
\newcommand{\section}[2][]{%
\stepcounter{section}%
\ifoptarg\cut{toc}{section}{#1}%
\else\cut{toc}{section}{#2}\fi%
\@open{H2}{}%
\thesection\quad #2%
\@close{H2}%
}
\newcommand{\section*}[1]{%
\cut{toc}{section}{#1}%
\@open{H2}{}%
#1%
\@close{H2}%
}


\newcommand{\subsection}[2][]{%
\stepcounter{subsection}%
\ifoptarg\cut{toc}{subsection}{#1}%
\else\cut{toc}{subsection}{#2}\fi%
\@open{H3}{}%
\thesubsection\quad #2%
\@close{H3}%
}
\newcommand{\subsection*}[2]{%
\@open{H3}{}%
#1%
\@close{H3}%
}
\newcommand{\subsubsection}[2][]{%
\@open{H4}{}%
#1%
\@close{H4}%
}
\newcommand{\subsubsection*}[1]{%
\@open{H4}{}%
#1%
\@close{H4}%
}
\newcommand{\paragraph}[2][]{%
\@open{H5}{}%
#1%
\@close{H5}%
}
\newcommand{\paragraph*}[1]{%
\@open{H5}{}%
#1%
\@close{H5}%
}
\newcommand\abstractname{\iffrench Résumé~\else Abstract}
\newenvironment{abstract}{\begin{quote}{\bf \abstractname:}}{\end{quote}}
