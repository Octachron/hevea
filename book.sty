\newcommand{\appendix}{%
\renewcommand{\chaptername}{Appendix}%
\setcounter{chapter}{0}%
\renewcommand{\thechapter}{\Alph{chapter}}%
}
\newcounter{figure}[chapter]
\renewcommand{\thefigure}{\thechapter.\arabic{figure}}

\newcommand{\part}[1]{%
\@print{<!--CUT PART-->}
\@open{H1}{ALIGN=center}
\stepcounter{part}
\partname:~\thepart\\
#1
\@close{H1}
}
\newcommand{\part*}[1]{%
\@print{<!--CUT CHAPTER-->}
\@open{H1}{ALIGN=center}
#1
\@close{H1}
}

\newcommand{\chapter}[1]{%
\@print{<!--CUT CHAPTER-->}
\@open{H1}{}
\stepcounter{chapter}
\chaptername~\thechapter: #1
\@close{H1}
}
\newcommand{\chapter*}[1]{%
\@print{<!--CUT CHAPTER-->}
\@open{H1}{}
#1
\@close{H1}
}

\newcommand{\section}[1]{%
\@print{<!--CUT SECTION-->}
\@open{H2}{}
\stepcounter{section}
\thesection~#1
\@close{H2}
}
\newcommand{\section*}[1]{%
\@print{<!--CUT SECTION-->}
\@open{H2}{}
#1
\@close{H2}
}


\newcommand{\subsection}[1]{%
\@open{H3}{}
\stepcounter{subsection}
\thesubsection~#1
\@close{H3}
}
\newcommand{\subsection*}[1]{%
\@open{H3}{}
#1
\@close{H3}
}


\newcommand{\subsubsection}[1]{%
