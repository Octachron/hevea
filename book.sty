\newcommand{\part}[2][]{%
\stepcounter{part}%
\ifoptarg\cuthere{part}{#1}%
\else\cuthere{part}{#2}\fi
\@open{H1}{ALIGN=center}%
\par
\partname:~\thepart\\%
#2%
\@close{H1}%
}
\newcommand{\part*}[1]{%
\cuthere{part}{#1}%
\@open{H1}{ALIGN=center}%
\par
#1%
\@close{H1}%
}

